<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd  
                        http://www.springframework.org/schema/context  
                        http://www.springframework.org/schema/context/spring-context-4.3.xsd
                        http://www.springframework.org/schema/aop 
                        http://www.springframework.org/schema/aop/spring-aop-4.3.xsd">

	<bean id="credentialsMatcher"
		class="org.apache.shiro.authc.credential.HashedCredentialsMatcher">
		<property name="hashAlgorithmName" value="md5"></property>
		<property name="hashIterations" value="1"></property>

	</bean>

	<bean id="myCustomRealm"
		class="com.xywei.shiro.realm.MyCustomRealm">
		<property name="credentialsMatcher" ref="credentialsMatcher"></property>
	</bean>

	<bean id="securityManager"
		class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
		<property name="realm" ref="myCustomRealm"></property>
		<property name="rememberMeManager"
			ref="cookieRememberMeManager"></property>
		<property name="cacheManager" ref="redisCacheManager"></property>
		<property name="sessionManager" ref="sessionManager"></property>
	</bean>

	<!-- 配置认证授权信息 -->
	<bean id="shiroFilter"
		class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager"></property>
		<!-- 圈疑问，value是直接写.jsp还是写经过controller的url？ answer：controller url -->
		<property name="loginUrl" value="index" />
		<property name="successUrl" value="home" />
		<!-- 先登录，登录之后如果没权限就跳转到此页面 -->
		<property name="unauthorizedUrl" value="forbidden403" />
		<property name="filterChainDefinitions">
			<value>
				/index=anon
				/userLogin=anon
				<!-- 实现rememberMe关键点 -->
				/home=user
				/**=user
				/userAndAdminTest=roles["user","admin"]
				<!-- 因为没有manager，所以返回403页面 -->
				/myRoleFilterTest=myRole["admin","user","manager"]
				<!-- 上面的如果没有配置anon过滤器，则shiro会认为没登录，就会重复返回登录页面index -->
				/* = authc
			</value>
		</property>
		<!-- 自定义filter -->
		<property name="filters">
			<map>
				<entry key="myRole"
					value-ref="myCustomRoleAuthorizationFilter" />
			</map>
		</property>
	</bean>

	<bean id="myCustomRoleAuthorizationFilter"
		class="com.xywei.shiro.filter.MyCustomRoleAuthorizationFilter"></bean>
	<!-- rememberMe -->

	<bean id="cookieRememberMeManager"
		class="org.apache.shiro.web.mgt.CookieRememberMeManager">
		<property name="cookie" ref="simpleCookie" />
	</bean>

	<bean id="simpleCookie"
		class="org.apache.shiro.web.servlet.SimpleCookie">
		<!-- 为什么非得叫rmemberme -->
		<constructor-arg value="myRememberMe2019" />
		<!-- 浏览器cookie存活时间 -->
		<property name="maxAge" value="600" />
	</bean>

	<bean id="sessionDAO"
		class="com.xywei.shiro.session.RedisSessionDao" />

	<bean id="sessionManager"
		class="com.xywei.shiro.session.MyCustomSessionManager">
		<property name="sessionDAO" ref="sessionDAO"></property>
	</bean>

	<bean id="redisCacheManager"
		class="com.xywei.shiro.cache.MyCustomCacheManager"></bean>

</beans>
